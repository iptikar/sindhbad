<body>

<div class = "container">
	<div class = "row">
	<% if ( sessionFlash && sessionFlash.message) { %>
	
<% if(sessionFlash.type == 'success'){  %>


<div class="alert alert-success">
	<strong>FLASH!</strong> <%= sessionFlash.message %>
</div>

<% } else {  %>
	
<div class="alert alert-danger">
	<strong>FLASH!</strong> <%= sessionFlash.message %>
</div>

<% } %>

<% } %>
	</div>
</div>
 
<div>
  
 <div class = "container">
 
	<div class = "row">
	
	<form action="/updateNode" method="POST">
    <input type="text" placeholder="name" name="name" value = <%= quotes[0].name %>>
    <input type="text" placeholder="quote" name="quote" value = <%= quotes[0].quote %>>
     <input type="hidden" placeholder="quote" name="id" value =<%= quotes[0]._id %>>
    
    <button type="submit" class="btn btn-danger">Update</button>
    
  </form>
	</div>
 </div>
  
  
<script src="main.js"></script>
</body>

</html>
